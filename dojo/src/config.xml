<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	    xmlns:gap="http://phonegap.com/ns/1.0"
	    id="com.propertycross.dojo"
	    version="1.0.0">

    <name>PropertyCross</name>

    <description>
        Part of the PropertyCross project, the Dojo implementation.
    </description>

    <author href="http://propertycross.com">
        Stuart Frost
    </author>

    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <preference name="phonegap-version"           value="2.5.0" />
    <preference name="target-device"              value="handset" />
    <preference name="orientation"                value="portrait" />
    <preference name="webviewbounce"              value="false" />
    <preference name="prerendered-icon"           value="true" />
    <preference name="auto-hide-splash-screen"    value="true" />

    <icon src="app/resources/icons/icon-72-2x.png" />
    <icon src="app/resources/icons/36x36.png"              gap:platform="android"    gap:density="ldpi" />
    <icon src="app/resources/icons/48x48.png"              gap:platform="android"    gap:density="mdpi" />
    <icon src="app/resources/icons/72x72.png"              gap:platform="android"    gap:density="hdpi" />
    <icon src="app/resources/icons/96x96.png"              gap:platform="android"    gap:density="xhdpi" />
    <icon src="app/resources/icons/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="app/resources/icons/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="app/resources/icons/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="app/resources/icons/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />

    <gap:splash src="app/resources/splashscreens/SplashScreenImage.jpg"        gap:platform="winphone"/>
    <gap:splash src="app/resources/splashscreens/200x320.png"                      gap:platform="android" gap:density="ldpi" />
    <gap:splash src="app/resources/splashscreens/320x480.png"                      gap:platform="android" gap:density="mdpi" />
    <gap:splash src="app/resources/splashscreens/480x800.png"                      gap:platform="android" gap:density="hdpi" />
    <gap:splash src="app/resources/splashscreens/720x1280.png"                     gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="app/resources/splashscreens/screen-iphone-portrait.png"       gap:platform="ios"     width="320" height="480" />
    <gap:splash src="app/resources/splashscreens/screen-iphone-portrait-2x.png"    gap:platform="ios"     width="640" height="960" />

</widget>
